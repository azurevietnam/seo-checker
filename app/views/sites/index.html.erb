<h1>Listing sites</h1>

<table class="table">
  <tr>
    <th>name</th>
    <th>domain</th>
    <th>note</th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= link_to site.name, site %></td>
    <td><%= link_to site.domain, "http://#{site.domain}", target: "_blank" %></td>
    <td><%= truncate(site.note, :length => 30) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Site', new_site_path %>


<table class="table">
  <thead>
    <th>Date</th>
    <% @sites.each do |site| %>
      <th colspan="3"><%= site.name %></th>
    <% end %>
  </thead>
  <% @days.times do |i| %>
    <% date = Date.today - i.days %>
    <tr>
        <td><%=l date %></td>
        <% @sites.each do |site| %>
          <% idx = @logs.index{ |log| log.checked_on == date and log.site_id == site.id } %>
          <% item = idx ? @logs[idx] : nil %>
          <td class="number"><%=n item ? item.sites : 0 %></td>
          <td class="number"><%=n item ? item.links : 0 %></td>
          <td class="number"><%=n item ? item.relateds : 0 %></td>
        <% end %>
    </tr>
  <% end %>
</table>
